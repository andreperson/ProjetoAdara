                        @Html.LabelFor(model => model.moedaidpaga)
                    </div>
                    <div class="inputgrande">
                        @Html.DropDownListFor(x => x.moedaidpaga, new SelectList(Model.Moedas, "moedaid", "descricao"), new { style = "width:200px" })
                        <div class="text-blue">
                            @Html.ValidationMessageFor(model => model.moedaidpaga)
                        </div>
                    </div>
