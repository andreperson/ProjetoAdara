                                                        </th>
                                                        <th>
                                                            @Html.DropDownListFor(x => item.jobstatusid, new SelectList(Model.JobStatus, "jobstatusid", "descricao", item.jobstatusid), new { @class = "form-control form-control-alternative", @onchange = "javascript:SetNewStatusId(this.value, " + @item.jobid + ");", @title="Change Status Job" })
